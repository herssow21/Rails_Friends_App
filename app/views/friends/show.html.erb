
<div class="row h-100  ">
  <div class="col-7 py-5 bg-light border rounded ">
    <h2><%= @friend.first_name%> <%= @friend.last_name%></h2>
    <h5 class="fw-lighter">Title:<%= @friend.last_name%></h5>
    <p class="lead">
    <%= @friend.phone%> | 
    <%= @friend.email%> |
    <%= @friend.facebook%>
    </p>
      <div class=" row actions">
        <div class="col-2">
        <%= link_to "Edit", edit_friend_path(@friend),class:"btn btn-secondary" %>
        </div>
        <div class="col-4">
        <%= button_to "Destroy", @friend, method: :delete,class:"btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </div>
      </div>
      </br>
      <hr class="mt-3">
      <%= link_to "Back to friends", friends_path, class:"btn btn-outline-dark" %>     
  </div>
  <div class="col-4">
  <%= image_tag "image-icon.jpg", class:"rounded w-100 h-100"%>
  </div>
</div>
