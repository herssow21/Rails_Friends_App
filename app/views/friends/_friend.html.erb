
<div id="<%= dom_id friend %>">  
    
      <tr>
        <td><%= friend.first_name %></td>    
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %>  </td>
        <td><%= friend.facebook %></td>
        <td><%= link_to "Show", friend ,class:"btn btn-success btn-sm"%></td>
        <td><%= link_to "Edit", edit_friend_path(friend),class:"btn btn-warning btn-sm" %></td>
        <td><%= button_to "Destroy", friend, method: :delete,class:"btn btn-sm btn-danger" %></td> 
      </tr>
</div> 